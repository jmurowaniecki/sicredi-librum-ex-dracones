root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_size = 4

[Makefile]
indent_style = tab

[*.{xml,apib,sh,conf,Dockerfile}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{{j,t}s{,on},{ht,y{,a}}ml,md,css}]
charset = utf-8
indent_style = space
indent_size = 2
